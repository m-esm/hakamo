generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql" // or your database provider
    url      = env("DATABASE_URL")
}

model Datasource {
    id               String         @id @default(uuid())
    name             String
    connectionString String?
    type             DatasourceType
}

model User {
    id                String    @id @default(uuid())
    email             String    @unique
    name              String
    lastLogin         DateTime?
    temporaryPassword String?
}

enum DatasourceType {
    POSTGRES
    MYSQL
    MONGODB
    MSSQL
}
